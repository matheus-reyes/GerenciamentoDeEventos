<!DOCTYPE html>
<html lang="pt-br">

<head>
    <title> Gerenciador De Eventos </title>
    <meta chartset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- CSS Externos -->
    <link href="stylesheets/bootstrap.css" rel="stylesheet">
    <link href="stylesheets/promotora.css" rel="stylesheet">
    <!-- Fonte Ballo Da 2 e Poppins -->
    <link href="https://fonts.googleapis.com/css?family=Baloo+Da+2|Pangolin|Poppins&display=swap" rel="stylesheet">
</head>

<body>
    <!-- Cabeçalho -->
    <header class="align-self-center shadow-sm p-3 mb-5 bg-white rounded">
        <div id="container" class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text">
                    <h2 class="titulo"> Gerenciador De Eventos </h2>
                </div>
            </div>
        </div>
    </header>
    <!-- Main -->
    <main>
        <section>
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <h2 class="text-center titulo"> Editar Informações </h2>
                        <!-- Formulário Cadastro Evento -->
                        <!-- Formulário Cadastro Promotora -->
                        <form action="/cadastroPromotora" method="POST">
                            <!-- Input CNPJ -->
                            <div class="form-group row mb-0">
                                <label for="cnpj" class="col-sm-12 col-form-label"></label>
                                <div class="col-md-12">
                                    <input type="text" class="form-control" id="cnpj" name="cnpj" placeholder="Digite o CNPJ">
                                </div>
                            </div>
                            <!-- Input Nome Empresa -->
                            <div class="form-group row mb-0">
                                <label for="nomeEmpresa" class="col-sm-12 col-form-label"></label>
                                <div class="col-md-12">
                                    <input type="text" class="form-control" id="nomeEmpresa" name="nomeEmpresa" placeholder="Digite o nome da Empresa">
                                </div>
                            </div>
                            <!-- Input Estado -->
                            <div class="form-group row mb-0">
                                <label for="estado" class="col-sm-12 col-form-label"></label>
                                <div class="col-md-12">
                                    <input type="text" class="form-control" id="estado" name="estado" placeholder="Digite o estado">
                                </div>
                            </div>
                            <!-- Input Cidade -->
                            <div class="form-group row mb-0">
                                <label for="cidade" class="col-sm-12 col-form-label"></label>
                                <div class="col-md-12">
                                    <input type="text" class="form-control" id="cidade" name="cidade" placeholder="Digite a cidade">
                                </div>
                            </div>
                            <!-- Input CEP Empresa -->
                            <div class="form-group row mb-0">
                                <label for="cepEmpresa" class="col-sm-12 col-form-label"></label>
                                <div class="col-md-12">
                                    <input type="text" class="form-control" id="cepEmpresa" name="cepEmpresa" placeholder="Digite o CEP">
                                </div>
                            </div>
                            <!-- Input logradouro Empresa -->
                            <div class="form-group row mb-0">
                                <label for="logradouroEmpresa" class="col-sm-12 col-form-label"></label>
                                <div class="col-md-12">
                                    <input type="text" class="form-control" id="logradouroEmpresa" name="logradouroEmpresa" placeholder="Digite o Logradouro">
                                </div>
                            </div>
                            <!-- Input número Empresa -->
                            <div class="form-group row mb-0">
                                <label for="numeroEmpresa" class="col-sm-12 col-form-label"></label>
                                <div class="col-md-12">
                                    <input type="text" class="form-control" id="numeroEmpresa" name="numeroEmpresa" placeholder="Digite o Número">
                                </div>
                            </div>
                            <!-- Input E-mail -->
                            <div class="form-group row mb-0">
                                <label for="email" class="col-sm-12 col-form-label"></label>
                                <div class="col-md-12">
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu e-mail">
                                </div>
                            </div>
                            <!-- Input Senha -->
                            <div class="form-group row mb-0">
                                <label for="password" class="col-sm-12 col-form-label"></label>
                                <div class="col-md-12">
                                    <input type="password" class="form-control" id="password" name="password" placeholder="Digite sua senha">
                                </div>
                            </div>
                            <!-- Input Confirmar Senha -->
                            <div class="form-group row">
                                <label for="confirmpassword" class="col-sm-12 col-form-label"></label>
                                <div class="col-md-12">
                                    <input type="password" class="form-control" id="confirmpassword" name="confirmpassword" placeholder="Confirme sua senha">
                                </div>
                            </div>
                            <!-- Botão de Login -->
                            <div class="form-group row">
                                <div class="col-md-12 text-center mb-3">
                                    <button type="submit" class="btn w-100 botao"> Editar Informações </button>
                                </div>
                                <div class="col-md-12 text-center">
                                    <button type="submit" class="btn w-100 botao botaoVermelho"> Apagar Conta </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>  
            </div>
        </section>
    </main>
    <script type="text/javascript" src="javascripts/jquery.js"></script>
    <script type="text/javascript" src="javascripts/bootstrap.js"></script>
</body>
</html>